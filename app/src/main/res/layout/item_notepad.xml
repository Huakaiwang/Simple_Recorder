<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_audio">
    <ImageView
        android:id="@+id/item_icon_note"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_note"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_icon_note"
        android:layout_marginLeft="15dp"
        android:text="这是我的记事本内容1111111111111"
        android:textSize="20sp"
        android:textStyle="normal"
        android:maxEms="8"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:lineSpacingExtra="3dp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_content"
        android:textColor="#C0C0C0"
        android:text="2022年5月20日 15：35：21"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/item_content"
        />
</RelativeLayout>