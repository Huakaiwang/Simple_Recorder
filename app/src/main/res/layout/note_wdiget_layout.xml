<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备忘录"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/wdiget_icon_note"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_note"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/wdiget_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wdiget_icon_note"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="这是我的记事本内容1111111111111"
            android:textSize="20sp"
            android:textStyle="normal"
            android:maxLines="4"
            android:ellipsize="end"
            android:singleLine="true"
            android:lineSpacingExtra="3dp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/wdiget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wdiget_content"
            android:textColor="#C0C0C0"
            android:text="2022年5月20日 15：35：21"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/wdiget_content"
            />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>